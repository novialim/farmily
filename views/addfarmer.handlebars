<script>
  function validateForm() {

    var vendorname = document.forms["addFarmerForm"]["vendor_name"].value;
    var marketid = document.forms["addFarmerForm"]["market_id"].value;
    var vendortext = document.forms["addFarmerForm"]["vendor_text"].value;

    if (vendorname == "") {
      // alert("Name must be filled out");
      Materialize.toast("Please enter farmer's name", 4000);
      return false;
    }
    else if (marketid == ""){
      Materialize.toast("Don't forget to pick a farmers' market!", 4000);
      return false;  
    }
    else if (vendortext == ""){
      Materialize.toast("Let us know something about your favorite farmer!", 4000);
      return false;    
    }
}

</script>